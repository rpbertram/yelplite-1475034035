<!-- Validation failure messages -->
<% if @restaurant_rating.errors.any? %>
  <% @restaurant_rating.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Restaurant Rating #<%= @restaurant_rating.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_restaurant_rating/<%= @restaurant_rating.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for restaurant_id -->
      <div class="form-group">
        <label for="restaurant_id" class="control-label">
          Restaurant
        </label>

        <input type="text" id="restaurant_id" name="restaurant_id" placeholder="Restaurant" class="form-control" value="<%= @restaurant_rating.restaurant_id %>">
      </div>

      <!-- Label and input for avg_stars -->
      <div class="form-group">
        <label for="avg_stars" class="control-label">
          Avg stars
        </label>

        <input type="text" id="avg_stars" name="avg_stars" placeholder="Avg stars" class="form-control" value="<%= @restaurant_rating.avg_stars %>">
      </div>

      <button class="btn btn-warning">
        Update Restaurant Rating
      </button>
      or
      <a href="/restaurant_ratings/<%= @restaurant_rating.id %>">Cancel</a>
    </form>
  </div>
</div>
